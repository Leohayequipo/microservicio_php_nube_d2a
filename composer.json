{
    "name": "d2a/hub",
    "description": "Microservicio D2A para Checkout y Webhooks de Tiendanube",
    "type": "project",
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "ext-curl": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "post-install-cmd": [
            "mkdir -p storage/logs storage/tmp"
        ]
    }
}
